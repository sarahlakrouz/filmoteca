<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Filmoteca</title>
</head>

<body>
    <main>
        <table>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Year</th>
                    <th>Type</th>
                    <th>Genre</th>
                    <th>Synopsis</th>
                    <th>Director</th>
                    <th>Deleted At</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                </tr>
                {% for film in films %}
                    <tr>
                        <td>{{ film.id }}</td>
                        <td>{{ film.title }}</td>
                        <td>{{ film.year }}</td>
                        <td>{{ film.type }}</td>
                        <td>{{ film.genre }}</td>
                        <td>{{ film.synopsis }}</td>
                        <td>{{ film.director }}</td>
                        <td>
                            {% if film.deletedAt %}
                                {{ film.deletedAt | date('Y-m-d H:i:s') }}
                            {% else %}
                                null
                            {% endif %}
                        </td>
                        <td>{{ film.createdAt | date('Y-m-d H:i:s') }}</td>
                        <td>
                            {% if film.updatedAt %}
                                {{ film.updatedAt|date('Y-m-d H:i:s') }}
                            {% else %}
                                null
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
        </table>
    </main>
</body>
</html>

 